{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"noEmit": true,
		// be explicit about types included
		// to avoid clashing with Jest types
		"target": "es5",
		"lib": ["es5", "dom"],
		"types": ["cypress", "node"]
	},
	"include": [
		"../node_modules/cypress",
		"../tsconfig.json",
		"../package.json",
		"**/cy.ts*",
		"**/cy.tsx",
		"../cypress.d.ts"
	],
	"exclude": ["./**/test.ts*"]
}
